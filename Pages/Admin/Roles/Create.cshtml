@model Console_UsersDbApplication.Pages.Roles.CreateModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Новая роль </title>
</head>
<body>





    <div class="container-fluid w-100">
        <div class="row">
            <div class="col-9">
                <table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AppRoles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedName)
            <td>
                @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AppRoleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AppRoleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AppRoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>


<h4>Роли пользователей системе</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppRole.Name" class="control-label"></label>
                <input asp-for="AppRole.Name" class="form-control" />
                <span asp-validation-for="AppRole.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppRole.NormalizedName" class="control-label"></label>
                <input asp-for="AppRole.NormalizedName" class="form-control" />
                <span asp-validation-for="AppRole.NormalizedName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppRole.ConcurrencyStamp" class="control-label"></label>
                <input asp-for="AppRole.ConcurrencyStamp" class="form-control" />
                <span asp-validation-for="AppRole.ConcurrencyStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
    </tbody>
</table>
<div>
    <a asp-page="Index"> Закрыть </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
